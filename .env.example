# App Base URL (your Vercel deployment URL)
NEXT_PUBLIC_BASE_URL=https://your-app.vercel.app

# Wix App Credentials (from Wix Dev Center)
WIX_APP_ID=your-wix-app-id
WIX_APP_SECRET=your-wix-app-secret
WIX_WEBHOOK_PUBLIC_KEY=your-wix-webhook-public-key
WIX_AUTH_MODE=hybrid

# HubSpot App Credentials (from HubSpot Developer Portal)
HUBSPOT_CLIENT_ID=your-hubspot-client-id
HUBSPOT_CLIENT_SECRET=your-hubspot-client-secret
HUBSPOT_APP_ID=your-hubspot-app-id

# MongoDB Atlas Connection String
MONGODB_URI=mongodb+srv://user:password@cluster.mongodb.net/wix-hubspot-integration

# Encryption Key (generate with: openssl rand -hex 32)
ENCRYPTION_KEY=your-32-byte-hex-encryption-key

# OAuth State Signing Secret (generate with: openssl rand -hex 32)
STATE_SECRET=your-random-state-signing-secret
